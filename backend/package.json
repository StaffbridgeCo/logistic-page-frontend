{
  "name": "backend-contact-ts",
  "version": "1.0.0",
  "description": "Backend en TypeScript con Express para gestionar el envío de formularios de contacto, implementado con Clean Architecture. Incluye validaciones, envío de correos vía Nodemailer y configuración flexible por variables de entorno.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest"
  },
  "keywords": [
    "typescript",
    "express",
    "clean-architecture",
    "contact-form",
    "nodemailer",
    "backend"
  ],
  "author": "santiago",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "nodemailer": "^7.0.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/nodemailer": "^6.4.20",
    "jest": "^29.7.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tuusuario/backend-contact-ts.git"
  },
  "bugs": {
    "url": "https://github.com/tuusuario/backend-contact-ts/issues"
  },
  "homepage": "https://github.com/tuusuario/backend-contact-ts#readme"
}
